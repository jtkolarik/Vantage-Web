<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Parallax -->
  <div class="absolute inset-0 hero-parallax">
    <img
      src="/images/hero-porch.png"
      alt="Farmhouse porch at twilight with telescope and rocking chair, looking out toward the horizon"
      class="w-full h-[120%] object-cover object-bottom scale-110"
      loading="eager"
      fetchpriority="high"
    />
    <!-- Gradient Overlays - reduced opacity -->
    <div class="absolute inset-0 bg-gradient-to-r from-navy/70 via-navy/40 to-navy/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-navy via-transparent to-navy/20"></div>
  </div>

  <!-- Floating particles -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 lg:px-8 py-24">
    <div class="max-w-3xl">
      <!-- Main Headline -->
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-medium text-cream leading-[1.1] mb-8">
        <span class="hero-reveal block opacity-0" style="animation-delay: 0.1s">A wider view</span>
        <span class="hero-reveal block opacity-0" style="animation-delay: 0.2s">of what your</span>
        <span class="hero-reveal block text-amber opacity-0" style="animation-delay: 0.3s">business can be.</span>
      </h1>

      <!-- Subheadline -->
      <p class="hero-reveal text-lg md:text-xl text-cream/70 leading-relaxed mb-10 max-w-xl opacity-0" style="animation-delay: 0.5s">
        We craft digital experiences that help businesses get seen in the places that matter.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-reveal flex flex-wrap gap-4 opacity-0" style="animation-delay: 0.6s">
        <a
          href="#contact"
          class="group inline-flex items-center gap-3 bg-amber hover:bg-orange text-navy px-8 py-4 font-medium transition-all duration-300 hover:gap-4"
        >
          Start a project
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="#work"
          class="inline-flex items-center gap-2 text-cream/80 hover:text-cream px-6 py-4 font-medium transition-colors border border-cream/20 hover:border-cream/40"
        >
          View our work
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 hero-reveal opacity-0" style="animation-delay: 1s">
    <a href="#services" class="flex flex-col items-center gap-2 text-cream/40 hover:text-cream/70 transition-colors">
      <span class="text-xs tracking-[0.2em] uppercase">Scroll</span>
      <div class="w-px h-12 bg-gradient-to-b from-cream/40 to-transparent scroll-line"></div>
    </a>
  </div>
</section>

<style>
  .hero-reveal {
    animation: heroReveal 0.8s ease-out forwards;
  }

  @keyframes heroReveal {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .scroll-line {
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.4; height: 48px; }
    50% { opacity: 0.8; height: 64px; }
  }

  /* Floating particles */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(212, 165, 116, 0.4);
    border-radius: 50%;
    animation: float 20s infinite;
  }

  .particle-1 { left: 10%; top: 20%; animation-delay: 0s; }
  .particle-2 { left: 20%; top: 60%; animation-delay: -4s; }
  .particle-3 { left: 70%; top: 30%; animation-delay: -8s; }
  .particle-4 { left: 80%; top: 70%; animation-delay: -12s; }
  .particle-5 { left: 50%; top: 80%; animation-delay: -16s; }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    50% {
      transform: translate(100px, -100px) scale(1.5);
      opacity: 0.3;
    }
    90% {
      opacity: 0.6;
    }
  }
</style>

<script>
  // Parallax effect on scroll
  const heroParallax = document.querySelector('.hero-parallax img');

  window.addEventListener('scroll', () => {
    const scrolled = window.scrollY;
    if (heroParallax && scrolled < window.innerHeight) {
      (heroParallax as HTMLElement).style.transform = `scale(1.1) translateY(${scrolled * 0.3}px)`;
    }
  });
</script>
