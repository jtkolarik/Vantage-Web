---
const projects = [
  {
    name: 'Redemption Electric',
    type: 'Electrical Services',
    url: 'https://redemptionelectric.netlify.app/',
    image: '/images/portfolio/redemption.png'
  },
  {
    name: 'Noble Contracting',
    type: 'Construction',
    url: 'https://noblecontracting.netlify.app/',
    image: '/images/portfolio/noble.png'
  },
  {
    name: 'Rydell',
    type: 'Tailor',
    url: 'https://rydell.netlify.app/',
    image: '/images/portfolio/rydell.png'
  }
];
---

<section id="work" class="relative py-32 lg:py-40 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <img
      src="/images/contrails.png"
      alt=""
      class="w-full h-full object-cover opacity-10"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-navy via-navy/98 to-navy"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between mb-16 lg:mb-20">
      <div class="max-w-2xl mb-8 lg:mb-0">
        <p class="reveal text-amber tracking-[0.3em] uppercase text-sm mb-4">Selected Work</p>
        <h2 class="reveal font-display text-4xl md:text-5xl lg:text-6xl text-cream leading-tight">
          Projects that<br class="hidden md:block" /> speak for themselves
        </h2>
      </div>
      <p class="reveal text-cream/50 max-w-sm text-lg">
        Real businesses. Real results. Each site designed to convert visitors into customers.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid lg:grid-cols-3 gap-8 lg:gap-6">
      {projects.map((project, index) => (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`reveal group block ${index === 0 ? 'lg:col-span-2 lg:row-span-2' : ''}`}
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="relative h-full bg-twilight/30 overflow-hidden border border-cream/5 group-hover:border-amber/20 transition-all duration-500">
            <!-- Number -->
            <div class="absolute top-4 left-4 z-20 font-display text-6xl lg:text-7xl text-cream/5 group-hover:text-amber/10 transition-colors duration-500">
              0{index + 1}
            </div>

            <!-- Screenshot with TV rounded edges -->
            <div class={`relative overflow-hidden ${index === 0 ? 'aspect-[16/10] lg:aspect-[16/9]' : 'aspect-[16/10]'} p-4`}>
              <div class="relative w-full h-full rounded-[2rem] overflow-hidden tv-screen">
                <img
                  src={project.image}
                  alt={`${project.name} website screenshot`}
                  class="w-full h-full object-cover object-top transition-all duration-700 group-hover:scale-105"
                  loading="lazy"
                />
                <!-- Overlay on hover -->
                <div class="absolute inset-0 bg-gradient-to-t from-navy via-navy/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-500"></div>

                <!-- View Project Button -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500">
                  <span class="inline-flex items-center gap-2 bg-amber text-navy px-6 py-3 font-medium transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 rounded-lg">
                    View Project
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </div>

            <!-- Project Info -->
            <div class="absolute bottom-0 left-0 right-0 p-6 lg:p-8">
              <div class="flex items-end justify-between">
                <div>
                  <p class="text-amber/80 text-sm mb-1 tracking-wider uppercase">{project.type}</p>
                  <h3 class="font-display text-2xl lg:text-3xl text-cream group-hover:text-amber transition-colors duration-300">
                    {project.name}
                  </h3>
                </div>
                <div class="w-10 h-10 flex items-center justify-center border border-cream/20 text-cream/50 group-hover:border-amber group-hover:text-amber transition-all duration-300 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7v10" />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .tv-screen {
    box-shadow:
      inset 0 0 30px rgba(0, 0, 0, 0.3),
      0 0 0 3px rgba(212, 165, 116, 0.1);
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const delay = entry.target.getAttribute('style')?.match(/animation-delay:\s*([\d.]+)s/);
        const delayMs = delay ? parseFloat(delay[1]) * 1000 : 0;

        setTimeout(() => {
          entry.target.classList.add('visible');
        }, delayMs);
      }
    });
  }, observerOptions);

  document.querySelectorAll('#work .reveal').forEach(el => observer.observe(el));
</script>
