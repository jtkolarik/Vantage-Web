---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent | Vantage Studio">
  <main class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center max-w-md">
      <div class="w-16 h-16 mx-auto mb-6 flex items-center justify-center text-amber">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h1 class="font-display text-3xl md:text-4xl text-cream mb-4">Message Sent</h1>
      <p class="text-cream/70 mb-8">
        Thanks for reaching out. We'll get back to you soon.
      </p>
      <a
        href="/"
        class="inline-flex items-center gap-2 bg-amber hover:bg-orange text-navy px-6 py-3 font-medium transition-colors duration-200"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Home
      </a>
    </div>
  </main>
</Layout>
